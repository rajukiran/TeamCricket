<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.acknotech.teamcricket.activities.MainActivity">

    <Spinner
        android:layout_width="200dp"
        android:layout_margin="25dp"
        android:id="@+id/players"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_margin="25dp"
        android:layout_below="@id/players"
        android:id="@+id/player_photo"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_margin="25dp"
        android:id="@+id/player_role"
        android:layout_below="@id/player_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <TextView
        android:layout_margin="25dp"
        android:layout_below="@id/player_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
</RelativeLayout>
